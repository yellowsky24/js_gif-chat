        script(src='/socket.io/socket.io.js')
        script.
            var socket=new io.connect("ws://localhost:8005",{
                path:'/socket.io',
            });
            //서버와 연결이 맺어지는 경우에 onopen이 수행되고 
            socket.on('news',function(data){
                console.log(data);
                socket.emit('reply','Hello Node JS');
            })